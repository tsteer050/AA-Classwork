<% if action == :edit %>
  <% action_url = cat_url(cat)%>
<% else %>
  <% action_url = cats_url %>
<% end %>




<form action=<%= action_url %> method="POST">

    <% if cat.persisted? %>
        <input type="hidden" name="_method" value="PATCH">
    <% end %>

  <label for="cat_name">Name</label>
  <input name="cat[name]" id="cat_name" type="text" value=<%=cat.name%>>
  <br>

  <label for="cat_birth_date">Birth Date</label>
  <input name="cat[birth_date]" id="cat_birth_date" type="date" value=<%=cat.birth_date%>>
  <br>

  <label>Sex</label>
  <div>
 
    <input name="cat[sex]" id="cat_sex_m" type="radio" value="M"  <%=cat.sex == "M" ? "checked = true" : ""%>>
    <label for="cat_sex_m">Male</label>
    <input name="cat[sex]" id="cat_sex_f" type="radio" value="F" <%=cat.sex == "F" ? "checked = true" : ""%>>
    <label for="cat_sex_f">Female</label>
  </div>
  <br>

  <label for="cat_description">Description</label>
  <textarea name="cat[description]" id="cat_description"><%=cat.description%></textarea>
  <br>

  <label for="cat_color">Color</label>

  <select name="cat[color]">
    <option disabled selected>-- Select Color --</option>
    <% Cat.colors.each do |color| %>
        <option value=<%= color %> <%= cat.color == color ? "selected" : ""%> ><%= color %></option>
    <% end %>
  </select>
  <br>


  <input type="submit" value="Update my cat!">
</form>
